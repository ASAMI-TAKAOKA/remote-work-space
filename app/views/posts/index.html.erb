<div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <label for="autocomplete-input">
            <%= form_with(url: search_posts_path, local: true, method: :get, class: "top_contents") do |form| %>
            <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "post" %>
            <%= form.submit "検索", class: "search-btn", class: "btn btn-info mr-3"%>
          <% end %>
          </label>
        </div>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row justify-content-center">
    <h1 class="font-weight-normal mt-5 mb-5">おすすめスポット投稿一覧</h1>
  </div>
      <div class="contents row">
          <% @posts.each do |post| %>
            <table class="table-light table-bordered text-dark">
              <tbody>
                <tr>
                  <td>
                  <div class="row no-gutters">
                    <%= render partial: "post", locals: { post: post } %>
                  </div>
                  </td>
                <tr>
              </tbody>
            </table>
            <% end %>
      </div>
</div>
 <%= paginate @posts %>



