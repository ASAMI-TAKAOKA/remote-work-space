<div class="container">
    <div class="row">
      <div class="col-sm">
      <br>
      <i class="fas fa-search fa-2x"></i>
        <label for="autocomplete-input">
        <%= form_with(url: search_posts_path, local: true, method: :get, class: "top_contents") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "post" %>
        <%= form.submit "検索", class: "search-btn" %>
        <% end %>
        </label>

<div class="container">
  <div class="row justify-content-center">
    <h1 class="font-weight-normal mt-5 mb-5">検索ヒット一覧</h1>
  </div>
<table class="table-light table-bordered text-dark">
          <tbody>
            <tr>
              <td>
                
                <div class="contents row">
                  <% @posts.each do |post| %>
                    <%= render partial: "post", locals: { post: post } %>
                  <% end %>
                </div>
          </td>
        </tr>     
      </tbody>
    </table>
  </div>
  </div>
</div>
</div>
