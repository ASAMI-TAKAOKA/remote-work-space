<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_name">
        <%= link_to gravatar_for(current_user, size: 50), current_user %>
        <h1><%= current_user.nickname %>さんのマイページ</h1>
        <span><%= pluralize(current_user.posts.count, "post") %></span>
        <%= link_to "Settings", edit_user_registration_path(current_user) %>
      </section>
      <section class="posts_form">
        <%= render 'posts/form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
      <h3><%= current_user.nickname %>さんの投稿一覧</h3>
      <%= render 'shared/feed' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1>TELESPOへようこそ!</h1>

  <h2>
    テレワークにおすすめの場所を共有し合いましょう♪
  </h2>

</div>

<h2 style="text-align:center"><%= image_pack_tag 'media/images/programming.jpg' %></h2>
<% end %>